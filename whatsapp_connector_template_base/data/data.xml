<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <record id="chatroom_email_template_partner_1" model="mail.template">
        <field name="name">ChatRoom: Ask Address</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="body_html" type="html"><p>Hello <t t-out="object.name"/><br/>Can you please send me your address and email.</p></field>
        <field name="lang">{{object.company_id.partner_id.lang}}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="chatroom_email_template_partner_2" model="mail.template">
        <field name="name">ChatRoom: Opening hours</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="body_html" type="html"><p>Hello <t t-out="object.name"/><br/>
Our opening hours are from 09:00 AM to 17:00 PM.</p></field>
        <field name="lang">{{object.company_id.partner_id.lang}}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="chatroom_email_template_partner_3" model="mail.template">
        <field name="name">ChatRoom: Debt</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="body_html" type="html"><p>Hello *<t t-out="object.name"/>*<br/>You are in debt for <t t-out="format_amount(object.get_total_due(), object.property_product_pricelist.currency_id)"/></p></field>
        <field name="lang">{{object.company_id.partner_id.lang}}</field>
        <field name="auto_delete" eval="True"/>
    </record>

</data>
</odoo>

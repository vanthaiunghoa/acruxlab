<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <record id="chatroom_email_template_purchase" model="mail.template">
        <field name="name">ChatRoom: Purchase PDF</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="body_html"><![CDATA[<p><t t-out="'Quotation' if object.state in ('draft', 'sent') else 'Purchase Order'"/> *<t t-out="object.name"/>* amounting in <t t-out="format_amount(object.amount_total, object.company_id.currency_id)"/> is ready for review.</p>]]></field>
        <field name="report_template" ref="purchase.action_report_purchase_order"/>
        <field name="report_name">PO_{{(object.name or '').replace('/','_')}}</field>
        <field name="lang">{{object.company_id.partner_id.lang}}</field>
        <field name="auto_delete" eval="True"/>
    </record>

</data>
</odoo>
